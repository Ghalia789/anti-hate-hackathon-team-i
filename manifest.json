{
  "manifest_version": 3,
  "name": "HateLess - Anti-Hate Speech",
  "version": "1.0.0",
  "description": "Real-time AI-powered hate speech detection with multilingual sentiment and toxicity analysis.",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://*/*",
    "http://localhost:5001/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "extension-content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "frontend/dist/popup.html",
    "default_icon": {
      "16": "frontend/dist/icons/icon-16.png",
      "48": "frontend/dist/icons/icon-48.png",
      "128": "frontend/dist/icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "frontend/dist/icons/icon-16.png",
    "48": "frontend/dist/icons/icon-48.png",
    "128": "frontend/dist/icons/icon-128.png"
  },
  
  "background": {
    "service_worker": "background.js"
  },

  "web_accessible_resources": [
    {
      "resources": ["frontend/dist/icons/*", "icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
